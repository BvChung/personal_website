---
import { getCollection } from "astro:content";
import formatDate from "../../utils/formatDate";
import Layout from "../../layouts/Layout.astro";

const posts = (await getCollection("posts")).sort(function (first, second) {
	return second.data.publishedAt.getTime() - first.data.publishedAt.getTime();
});
---

<Layout title="All Posts">
	<main>
		<h1 class="mb-12 text-2xl font-semibold text-white">Posts</h1>

		<article class="gap-6 flex flex-col">
			{
				posts.map((post) => (
					<a
						class="group flex flex-col gap-2 border p-4 rounded-md border-neutral-700 hover:bg-hoverBG2 hover:bg-opacity-20 py-4 transition-all hover:text-neutral-100"
						href={`/posts/${post.slug}`}
					>
						<div class="flex w-full items-center justify-between">
							<h2 class="group-hover:text-yellow-500 text-lg">
								{post.data.title}
							</h2>

							<div class="flex flex-row items-center gap-4">
								<p class="text-sm">{formatDate(post.data.publishedAt)}</p>
								<svg
									width="18"
									height="18"
									viewBox="0 0 18 18"
									fill="none"
									stroke-width="1.5"
									class="stroke-secondary transition-all duration-300 group-hover:translate-x-1 group-hover:stroke-yellow-500"
								>
									<path
										d="M5.25 12.75L12.75 5.25"
										stroke-linecap="round"
										stroke-linejoin="round"
									/>
									<path
										d="M5.25 5.25H12.75V12.75"
										stroke-linecap="round"
										stroke-linejoin="round"
									/>
								</svg>
							</div>
						</div>
						<p class="text-sm text-neutral-300">{post.data.description}</p>
					</a>
				))
			}
		</article>
	</main>
</Layout>
