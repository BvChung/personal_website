---
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<main
		class="flex items-center justify-center flex-1 min-h-full px-6 py-24 sm:py-32 lg:px-8 -mt-12"
	>
		<div class="text-center">
			<p class="text-2xl font-semibold text-indigo-500">404</p>
			<h1
				class="mt-4 text-3xl font-bold tracking-tight text-neutral-100 sm:text-4xl"
			>
				Page not found
			</h1>
			<p class="mt-6 text-base leading-7 text-neutral-300">
				Sorry, we couldn’t find the page you’re looking for.
			</p>
			<div class="mt-10 flex items-center justify-center gap-x-6">
				<a
					href="/"
					class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-700 transition-all"
					>Go back home</a
				>
			</div>
		</div>
	</main>
</Layout>
