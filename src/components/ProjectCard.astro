---
import type { Project } from "../data/projects";

type Props = Project;

const { title, tech, link, description } = Astro.props;

const formatTech = (values: string[]) =>
	values.toString().replaceAll(",", " â€¢ ");
---

<a
	class="group flex w-full cursor-pointer flex-col rounded-md border border-neutral-600 p-4 transition-all duration-300 hover:-translate-y-2 hover:border-neutral-400"
	href={link}
	target="_blank"
	rel="noreferrer"
>
	<div
		class={`flex justify-between items-center w-full ${description && "mb-4"}`}
	>
		<div class="flex gap-2 items-center justify-between w-full pr-5">
			<p class="text-neutral-100">
				{title}
			</p>

			<p class="hidden md:block text-sm text-neutral-300">{formatTech(tech)}</p>
		</div>

		<svg
			width="18"
			height="18"
			viewBox="0 0 18 18"
			fill="none"
			class="transition-all duration-300 group-hover:translate-x-1 stroke-neutral-100"
		>
			<path
				d="M5.25 12.75L12.75 5.25"
				stroke-linecap="round"
				stroke-linejoin="round"></path>
			<path
				d="M5.25 5.25H12.75V12.75"
				stroke-linecap="round"
				stroke-linejoin="round"></path>
		</svg>
	</div>

	<p class="text-sm text-neutral-200">{description}</p>
</a>
