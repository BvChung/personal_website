---
import { removeTrailingSlash, isPathActive } from "../utils/formatPath";
import SocialLinks from "./SocialLinks.astro";
import type { Path } from "../types/path";
import PathLinks from "./PathLinks.astro";

const pathname = removeTrailingSlash(Astro.url.pathname);

const pathLinks: Path[] = [
	{
		basePath: "/",
		href: "/",
		name: "Home",
	},
	{
		basePath: "/posts",
		href: "/posts/1",
		name: "Posts",
	},
	{
		basePath: "/notes",
		href: "/notes/1",
		name: "Notes",
	},
];
---

<header
	class="z-40 mb-[4.5rem] flex w-full flex-col gap-2 md:flex-row md:justify-between"
>
	<nav role="navigation" class="flex w-full items-center justify-between">
		<SocialLinks />

		<PathLinks pathLinks={pathLinks} />
	</nav>
</header>
