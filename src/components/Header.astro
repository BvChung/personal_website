---
import removeTrailingSlash from "../utils/removeTrailingSlash";
import SocialLinks from "./SocialLinks.astro";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header
	class="z-40 mb-20 flex w-full flex-col gap-2 md:flex-row md:justify-between"
>
	<nav role="navigation" class="flex w-full items-center justify-between">
		<SocialLinks />

		<ul role="list" class="flex flex-row gap-2 text-base font-medium">
			<li>
				<a
					href="/"
					class:list={[
						"text-neutral-50 hover:text-yellow-500",
						{
							"text-yellow-500 border-b-2 border-b-yellow-500":
								pathname === "/",
						},
					]}
					]}>Home</a
				>
			</li>
			<li>|</li>
			<li>
				<a
					href="/posts"
					class:list={[
						"text-neutral-50 hover:text-yellow-500",
						{
							"text-yellow-500 border-b-2 border-b-yellow-500":
								pathname === "/posts",
						},
					]}
					]}
					>Posts
				</a>
			</li>
		</ul>
	</nav>
</header>
