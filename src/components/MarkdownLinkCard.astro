---
import { formatDate } from "../utils/formatDate";

type Props = {
	title: string;
	publishedDate: Date;
	description: string;
	slug: string;
	path: string;
};

const { title, publishedDate, description, slug, path } = Astro.props;
---

<a
	class="group flex flex-col gap-2 border p-4 rounded-md border-neutral-700 hover:bg-hoverBG hover:bg-opacity-20 py-4 transition-all hover:text-neutral-100"
	href={`/${path}/${slug}`}
>
	<div class="flex w-full items-center justify-between">
		<h2 class="group-hover:text-yellow-500 text-neutral-50 text-base mb-1">
			{title}
		</h2>

		<div class="flex flex-row items-center gap-4">
			<p class="text-sm">{formatDate(publishedDate)}</p>
			<svg
				width="18"
				height="18"
				viewBox="0 0 18 18"
				fill="none"
				stroke-width="1.5"
				class="stroke-secondary transition-all duration-300 group-hover:translate-x-1 group-hover:stroke-yellow-500"
			>
				<path
					d="M5.25 12.75L12.75 5.25"
					stroke-linecap="round"
					stroke-linejoin="round"></path>
				<path
					d="M5.25 5.25H12.75V12.75"
					stroke-linecap="round"
					stroke-linejoin="round"></path>
			</svg>
		</div>
	</div>
	<p class="text-sm text-neutral-300">{description}</p>
</a>
