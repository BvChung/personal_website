---
import formatDate from "../utils/formatDate";

type Props = {
	title: string;
	publishedAt: Date;
	description: string;
	slug: string;
};

const { title, publishedAt, description, slug } = Astro.props;
---

<a
	class="group flex w-full cursor-pointer flex-col gap-3 rounded-md border border-secondary3 hover:bg-hoverBG2 hover:bg-opacity-30 p-4 transition-all"
	href={`/posts/${slug}`}
>
	<div
		class="flex w-full flex-col justify-between gap-2 md:flex-row md:items-center"
	>
		<p class="text-neutral-100 truncate max-w-[14rem]">{title}</p>
		<div class="flex gap-2 items-center">
			<p class="text-neutral-100 truncate max-w-sm">
				{formatDate(publishedAt)}
			</p>
			<svg
				width="18"
				height="18"
				viewBox="0 0 18 18"
				fill="none"
				stroke-width="1.5"
				class="stroke-secondary transition-all duration-300 group-hover:translate-x-1 group-hover:stroke-yellow-500"
			>
				<path
					d="M5.25 12.75L12.75 5.25"
					stroke-linecap="round"
					stroke-linejoin="round"></path>
				<path
					d="M5.25 5.25H12.75V12.75"
					stroke-linecap="round"
					stroke-linejoin="round"></path>
			</svg>
		</div>
	</div>

	<p class="truncate text-neutral-300 text-sm">
		{description}
	</p>
</a>
