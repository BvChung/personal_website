---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SEOTags from "../components/seo/SEOTags.astro";

import type { HeadTags } from "../types/HeadTags";

import "@fontsource/satisfy";
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
import "@fontsource/inter/800.css";
import "../styles/tailwind.css";
import "../styles/markdown.css";

export type Props = HeadTags;

const headTags = Astro.props;
---

<!doctype html>
<html lang="en">
	<SEOTags {...headTags} />

	<body
		class="mx-auto flex min-h-screen max-w-4xl flex-col bg-mainBG px-10 py-8 text-gray-300 md:pt-16 md:pb-10"
	>
		<Header />
		<slot />
		<style is:global>
			html {
				font-family: "Inter", sans-serif;
			}
		</style>

		<Footer />
	</body>
</html>
