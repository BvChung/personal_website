---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SEOTags from "../components/seo/SEOTags.astro";

import type { HeadTags } from "../utils/types/HeadTags";

import "@fontsource-variable/open-sans";
import "@fontsource/satisfy";
import "../styles/tailwind.css";
import "../styles/post.css";

export type Props = HeadTags;

const headTags = Astro.props;
---

<!doctype html>
<html lang="en">
	<SEOTags {...headTags} />

	<body
		class="mx-auto flex min-h-screen max-w-[872px] flex-col bg-mainBG px-10 py-8 text-gray-300 md:pt-16 md:pb-10"
	>
		<Header />
		<slot />
		<style is:global>
			html {
				font-family: "Open Sans Variable", sans-serif;
			}
		</style>
	</body>
</html>
